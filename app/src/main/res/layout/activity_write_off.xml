<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:roundiv="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.youwu.shouyinsaas.ui.money.WriteOffViewModel" />
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <!-- 顶部导航栏 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_55dp"
            android:orientation="horizontal"
            android:background="@color/main_color"
            >
            <TextView
                android:id="@+id/fanhui"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="返回"
                android:gravity="center"
                android:textSize="@dimen/text_18sp"
                android:textColor="@color/main_white"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_30dp"
                android:drawableLeft="@mipmap/lift_white_sanjiao"
                android:drawablePadding="@dimen/size_5dp"
                binding:onClickCommand="@{viewModel.returnOnClick}"
                />
            
            <View
                android:layout_width="2dp"
                android:layout_height="@dimen/size_35dp"
                android:background="@drawable/radius_white"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_35dp"
                android:layout_toRightOf="@+id/fanhui"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="核销"
                android:textColor="@color/main_white"
                android:textSize="@dimen/text_19sp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <!-- 成功 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/radius_white_8dp"
            android:layout_marginTop="@dimen/size_15dp"
            android:layout_marginBottom="@dimen/size_15dp"
            android:visibility="@{viewModel.type_state==4?View.VISIBLE:View.GONE}"
            >

            <com.youwu.shouyinsaas.utils_view.CustomView
                android:id="@+id/custom_view"
                android:layout_width="@dimen/size_175dp"
                android:layout_height="@dimen/size_175dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="核销成功"
                android:textStyle="bold"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/main_black_5B"
                />

            <TextView
                android:layout_width="@dimen/size_200dp"
                android:layout_height="@dimen/size_50dp"
                android:text="返回首页"
                android:textSize="@dimen/text_17sp"
                android:textColor="@color/main_white"
                android:background="@drawable/radius_blue_5dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/size_25dp"
                binding:onClickCommand="@{viewModel.MainOnClick}"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F4F8FB"
            android:orientation="vertical"
            android:paddingLeft="@dimen/size_128dp"
            android:paddingRight="@dimen/size_128dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_35dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_20dp"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radius_white_8dp"
                    android:paddingLeft="@dimen/size_15dp"
                    android:layout_weight="1"
                    >
                    <EditText
                        android:id="@+id/sou_suo_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="输入券码"
                        android:text="@={viewModel.CouponCode}"
                        android:textSize="@dimen/text_12sp"
                        android:gravity="left|center"
                        android:theme="@style/WhiteEditText"
                        android:inputType="number"
                        android:background="@null"
                        android:selectAllOnFocus="true"
                        android:drawableLeft="@mipmap/sousuo"
                        android:drawablePadding="@dimen/size_5dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/cancel_sou_suo"
                    android:layout_width="@dimen/size_90dp"
                    android:layout_height="match_parent"
                    android:text="搜索"
                    android:textSize="@dimen/text_12sp"
                    android:gravity="center"
                    android:textColor="@color/main_black"
                    android:background="@drawable/radius_hui_45dp"
                    android:layout_marginLeft="@dimen/size_8dp"
                    binding:onClickCommand="@{viewModel.SouSuoOnClick}"
                    />

            </LinearLayout>
            <!-- 空视图 -->
            <LinearLayout
                android:id="@+id/null_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/radius_white_8dp"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_marginBottom="@dimen/size_15dp"
                android:visibility="@{viewModel.type_state==3?View.VISIBLE:View.GONE}"
                >
                <ImageView
                    android:layout_width="@dimen/size_175dp"
                    android:layout_height="@dimen/size_175dp"
                    android:src="@mipmap/null_view"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无此券码"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_15sp"
                    android:textColor="@color/main_color"
                    />
            </LinearLayout>
            <!-- 商品详情 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{viewModel.type_state==2?View.VISIBLE:View.GONE}"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_white_8dp"
                    android:layout_marginTop="@dimen/size_15dp"
                    android:padding="@dimen/size_15dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单编号："
                            android:textSize="@dimen/text_15sp"
                            android:textColor="@color/main_black_54"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.entity.order_sn}"
                            android:textSize="15sp"
                            android:textColor="@color/text_39"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layerType="software"
                        android:background="@drawable/xu_xian"
                        android:layout_marginTop="@dimen/size_10dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="会员昵称："
                                android:textSize="@dimen/text_15sp"
                                android:textColor="@color/main_black_54"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.entity.member_name}"
                                android:textSize="15sp"
                                android:textColor="@color/text_39"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="下单时间："
                                android:textSize="@dimen/text_15sp"
                                android:textColor="@color/main_black_54"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.entity.created_at}"
                                android:textSize="15sp"
                                android:textColor="@color/text_39"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/size_15dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="商品名称"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/main_black_85"
                        android:gravity="center"
                        android:layout_weight="2"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="数量"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/main_black_85"
                        android:gravity="center"
                        android:layout_weight="3"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="单价"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/main_black_85"
                        android:gravity="center"
                        android:layout_weight="3"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="优惠金额"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/main_black_85"
                        android:gravity="center"
                        android:layout_weight="3"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="小计"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/main_black_85"
                        android:gravity="center"
                        android:layout_weight="3"
                        />

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/GoodsRecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/size_10dp"
                    android:overScrollMode="never"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.GoodsDetails}"
                    android:textColor="@color/main_black_54"
                    android:textSize="@dimen/text_14sp"
                    android:layout_marginTop="@dimen/size_10dp"

                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginBottom="@dimen/size_10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/radius_white_8dp"
                        android:padding="@dimen/size_15dp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/size_5dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="合计"
                                android:textSize="15sp"
                                android:textColor="@color/main_color"
                                />
                            <TextView
                                android:id="@+id/rmb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="@color/color_red"
                                android:textSize="13sp"
                                android:layout_gravity="bottom"
                                android:paddingBottom="@dimen/size_3dp"
                                android:layout_marginRight="@dimen/size_3dp"
                                android:layout_marginLeft="@dimen/size_15dp"
                                />
                            <TextView
                                android:id="@+id/cope_with_prick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.entity.goods_amount+@string/main_null}"
                                android:textStyle="bold"
                                android:textColor="@color/color_red"
                                android:textSize="23sp"
                                />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layerType="software"
                            android:background="@drawable/xu_xian"
                            android:layout_marginTop="@dimen/size_10dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/size_20dp"
                            android:layout_marginBottom="@dimen/size_5dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="折扣优惠：-"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/main_black_54"
                                        />
                                    <TextView
                                        android:id="@+id/discount_prick"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{viewModel.entity.reduced_amount+@string/main_null}"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/main_black_54"
                                        />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="抹零：-"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/main_black_54"
                                        />
                                    <TextView
                                        android:id="@+id/wipe_zero"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{viewModel.entity.mal+@string/main_null}"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/main_black_54"
                                        />
                                </LinearLayout>

                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="反结账"
                                android:textSize="@dimen/text_17sp"
                                android:textColor="@color/main_white"
                                android:background="@drawable/radius_blue_5dp"
                                android:paddingRight="@dimen/size_15dp"
                                android:paddingLeft="@dimen/size_15dp"
                                android:paddingBottom="@dimen/size_6dp"
                                android:paddingTop="@dimen/size_6dp"
                                android:layout_gravity="right"
                                android:visibility="invisible"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/radius_white_8dp"
                        android:padding="@dimen/size_15dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/size_5dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="实收"
                                android:textSize="15sp"
                                android:textColor="@color/main_color"
                                />
                            <TextView
                                android:id="@+id/rmb_tow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="@color/color_red"
                                android:textSize="13sp"
                                android:layout_gravity="bottom"
                                android:paddingBottom="@dimen/size_3dp"
                                android:layout_marginRight="@dimen/size_3dp"
                                android:layout_marginLeft="@dimen/size_15dp"
                                />
                            <TextView
                                android:id="@+id/paid_in_prick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.entity.amount+@string/main_null}"
                                android:textStyle="bold"
                                android:textColor="@color/color_red"
                                android:textSize="23sp"
                                />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layerType="software"
                            android:background="@drawable/xu_xian"
                            android:layout_marginTop="@dimen/size_10dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/size_20dp"
                            android:layout_marginBottom="@dimen/size_5dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="支付方式："
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/main_black_54"
                                        />
                                    <TextView
                                        android:id="@+id/pay_mode"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@{viewModel.entity.pay_type}"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/main_black_54"
                                        />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.entity.pickup_status!=2?@string/ConfirmWriteOff:@string/WrittenOff}"
                                    android:textSize="@dimen/text_17sp"
                                    android:textColor="@color/main_white"
                                    android:background="@drawable/radius_blue_5dp"
                                    android:paddingRight="@dimen/size_15dp"
                                    android:paddingLeft="@dimen/size_15dp"
                                    android:paddingBottom="@dimen/size_6dp"
                                    android:paddingTop="@dimen/size_6dp"
                                    android:layout_gravity="right"
                                    binding:onClickCommand="@{viewModel.ConfirmWriteOffOnClick}"
                                    />


                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>




        </LinearLayout>
    </LinearLayout>

</layout>