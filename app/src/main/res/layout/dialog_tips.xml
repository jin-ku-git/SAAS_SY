<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radius_white"
    android:id="@+id/layout_view"
    android:paddingBottom="@dimen/size_10dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/radius_white"
        >

        <com.youwu.shouyinsaas.utils_view.RightMarkView
            android:id="@+id/activity_right_mark_rmv"
            android:layout_width="@dimen/size_175dp"
            android:layout_height="@dimen/size_175dp" />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开成功"
            android:textStyle="bold"
            android:textSize="@dimen/size_18dp"
            android:textColor="@color/main_black_5B"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_20dp"

            />
        <LinearLayout
            android:layout_width="@dimen/size_300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_20dp"
            >
            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:text="取消"
                android:gravity="center"
                android:textSize="@dimen/size_16dp"
                android:textColor="@color/color_blue"
                android:background="@drawable/radius_hui_xian_5dp"

                android:layout_marginRight="@dimen/size_10dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/confirm_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:text="确认"
                android:gravity="center"
                android:textSize="@dimen/size_16dp"
                android:textColor="@color/main_white"
                android:background="@drawable/radius_blue_5dp"

                android:layout_weight="1"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
