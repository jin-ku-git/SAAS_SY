<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radius_white"
    android:id="@+id/layout_view"
    android:paddingTop="@dimen/size_20dp"
    android:paddingLeft="@dimen/size_35dp"
    android:paddingRight="@dimen/size_35dp"
    android:paddingBottom="@dimen/size_15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/close_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="@dimen/text_18sp"
            android:textColor="#40000000"
            android:drawableLeft="@mipmap/lift_sanjiao"
            android:drawablePadding="@dimen/size_5dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/GoodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/size_20dp"
            android:textColor="@color/main_black"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/radius_hui_xian_f8fcff_8dp"
        android:layout_marginTop="@dimen/size_15dp"
        android:padding="@dimen/size_15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原库存："
            android:textSize="@dimen/size_14dp"
            android:textColor="@color/main_black"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_14dp"
            android:textColor="@color/main_black"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/radius_hui_xian_f8fcff_8dp"
        android:layout_marginTop="@dimen/size_15dp"
        android:padding="@dimen/size_15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更改：现存"
            android:textSize="@dimen/size_14dp"
            android:textColor="@color/main_black"
            android:layout_gravity="center"
            />

        <RelativeLayout
            android:layout_width="@dimen/size_100dp"
            android:layout_height="@dimen/size_45dp"
            android:background="@drawable/radius_white_xian_5dp"
            android:paddingLeft="@dimen/size_15dp"
            android:layout_marginLeft="@dimen/size_15dp"
            >
            <EditText
                android:id="@+id/change_edit_text"
                android:layout_width="@dimen/size_100dp"
                android:layout_height="match_parent"
                android:hint="请输入数量"
                android:textSize="@dimen/text_12sp"
                android:inputType="number"
                android:digits="1234567890."
                android:maxLength="8"
                android:gravity="left|center"
                android:theme="@style/WhiteEditText"
                android:background="@null"
                android:drawablePadding="@dimen/size_5dp"
                />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/radius_hui_xian_f8fcff_8dp"
        android:layout_marginTop="@dimen/size_15dp"
        android:padding="@dimen/size_15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原因："
            android:textSize="@dimen/size_14dp"
            android:textColor="@color/main_black"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerView_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginStart="@dimen/size_25dp"
            android:layout_marginEnd="@dimen/text_25sp"
            android:layout_weight="1"
            android:overScrollMode="never"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_15dp"
        >
        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="确定"
            android:textSize="@dimen/size_14dp"
            android:textColor="@color/main_white"
            android:gravity="center"
            android:background="@drawable/radius_blue_8dp"
            />
    </LinearLayout>




</LinearLayout>
